# SlideFlip Backend environment example
# Copy this file to `backend/.env.local` and edit values as needed.

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Security
SECRET_KEY=change-me

# Storage and limits
UPLOAD_DIR=uploads
TEMP_DIR=temp
OUTPUT_DIR=output
MAX_FILE_SIZE=52428800

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# AI
ANTHROPIC_API_KEY=
